<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.app.searchwikipedia">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.appsnesst.searchwikipedia.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.appsnesst.searchwikipedia.view.activity.NewSearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/WebActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7157770574029952~3499119515" />

        <activity
            android:name="com.appsnesst.searchwikipedia.view.activity.WebViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/WebActivityTheme" />
    </application>

</manifest>